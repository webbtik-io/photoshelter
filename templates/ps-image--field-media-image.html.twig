{%
    set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode.id()|clean_class,
]
%}
<figure{{ attributes.addClass(classes) }}>
    {{ title_suffix.contextual_links }}
    {% if content %}
        {{ content }}
    {% endif %}
</figure>
